<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="198dp"
            android:layout_height="198dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="33dp"
            android:src="@mipmap/login_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_xunjian_bangding"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_xjy_bind"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="巡检绑定"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btn_xunjian_bangding"
            app:layout_constraintStart_toStartOf="@+id/btn_xunjian_bangding"
            app:layout_constraintTop_toBottomOf="@+id/btn_xunjian_bangding" />


        <ImageView
            android:id="@+id/btn_xunjian_selete"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="108dp"
            android:src="@mipmap/ic_xjy_xunjian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="巡检设备"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btn_xunjian_selete"
            app:layout_constraintStart_toStartOf="@+id/btn_xunjian_selete"
            app:layout_constraintTop_toBottomOf="@+id/btn_xunjian_selete" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>