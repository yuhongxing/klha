<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/sel_pressed"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/TextView_bold_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="订单详情"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/tv_right"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_white"
            android:gravity="center"
            android:text="处理"
            android:textColor="@color/bg_blue"
            android:visibility="gone" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单信息："
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_ordernum"
                        style="@style/order_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订&#160;&#160;单&#160;&#160;号：" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        style="@style/order_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="下单时间：" />

                    <TextView
                        android:id="@+id/tv_orderOk_time"
                        style="@style/order_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="完成日期：" />

                    <TextView
                        android:id="@+id/zhifufangshi"
                        style="@style/order_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="支付方式：" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/bg_gray" />

                    <TextView
                        android:id="@+id/tv_kehu_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="客户编号："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="客&#12288;&#12288;户："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="电&#12288;&#12288;话："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地&#12288;&#12288;址："
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/bg_gray" />


                    <TextView
                        android:id="@+id/tv_gyz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="供&#160;&#160;应&#160;&#160;站："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订单金额：0.00"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_yajin_xianshang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="线上收取：0.00"
                        android:textSize="18sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_laiyuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="来&#12288;&#12288;源："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_laidianTel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="来电号码："
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="备&#12288;&#12288;注："
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_anjian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/line_gpList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/bg_gray"
                        android:columnCount="4"
                        android:orientation="horizontal"
                        android:rowCount="2">

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="商品" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="单价" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="数量" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="金额" />

                        <TextView
                            android:id="@+id/tv_gp_good"
                            android:layout_columnWeight="1"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_gp_jiage"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_gp_num"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_gp_money"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                    </GridLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:text="气瓶列表:"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <mylib.ui.list.MyListView
                        android:id="@+id/list_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_spList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:text="商品列表:"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <GridLayout
                        android:id="@+id/gridLayout_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/bg_gray"
                        android:columnCount="4"
                        android:orientation="horizontal"
                        android:rowCount="2">

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="商品" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="单价" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="数量" />

                        <TextView
                            android:layout_columnWeight="1"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="金额" />

                        <TextView
                            android:id="@+id/tv_good"
                            android:layout_columnWeight="1"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_jiage"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_columnWeight="1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="." />


                    </GridLayout>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>


        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_favo"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_40dp"
                android:layout_toLeftOf="@+id/btn_reject_order"
                android:background="@drawable/sel_btn_blue"
                android:gravity="center"
                android:text="@string/title_favo"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btn_reject_order"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/sel_btn_red"
                android:gravity="center"
                android:text="@string/title_reject_order"
                android:textColor="@android:color/white" />
        </RelativeLayout>

