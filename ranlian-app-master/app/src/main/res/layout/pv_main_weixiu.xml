<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="198dp"
            android:layout_height="198dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="33dp"
            android:src="@mipmap/login_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_weixiu"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_baoxiu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="维修单"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btn_weixiu"
            app:layout_constraintStart_toStartOf="@+id/btn_weixiu"
            app:layout_constraintTop_toBottomOf="@+id/btn_weixiu" />


        <ImageView
            android:id="@+id/btn_anjian"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="108dp"
            android:src="@mipmap/ic_anjian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="安检单"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btn_anjian"
            app:layout_constraintStart_toStartOf="@+id/btn_anjian"
            app:layout_constraintTop_toBottomOf="@+id/btn_anjian" />

        <TextView
            android:id="@+id/tv_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="消息"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:background="@drawable/bg_red_corners"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=" 0 "
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_xiaoxi"
            app:layout_constraintStart_toEndOf="@+id/tv_xiaoxi"
            app:layout_constraintTop_toTopOf="@+id/tv_xiaoxi" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>