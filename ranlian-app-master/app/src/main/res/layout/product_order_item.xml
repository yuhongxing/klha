<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_product"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/black"></TextView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_amount"
            android:textColor="@android:color/black" />

        <com.czsy.ui.CountWidget
            android:id="@+id/count_widget"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:gravity="center"
            android:text="@string/title_ping"
            android:textColor="@android:color/black" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_price"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="80dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@android:color/black"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_price"
            android:gravity="center"
            android:text="@string/title_yuan"
            android:textColor="@android:color/black" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_all_peisongfei"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_peisongfei"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="80dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="@android:color/black"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_peisongfei"
            android:gravity="center"
            android:text="@string/title_yuan"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sel_btn_border"
            android:gravity="center"
            android:text="@string/title_modify"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:paddingRight="20dp"
        android:textColor="@android:color/black" />

    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/bg_gray_dark" />-->
</LinearLayout>
