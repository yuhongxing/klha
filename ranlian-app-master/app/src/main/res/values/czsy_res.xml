    <color name="border_blue">#0C5CA9</color>
    <color name="bg_blue">#FF238CFC</color>
    <color name="bg_gray">#dddddd</color>
    <color name="bg_gray_dark">#888888</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="red">#FF0000</color>


    <color name="tv_bold_black">#FF212121</color>
    <color name="tv_bold_black33">#FF333333</color>
